<UserControl x:Class="EphemeralBrowser.Views.TabsAndPanels"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:EphemeralBrowser.ViewModels"
             xmlns:conv="clr-namespace:EphemeralBrowser.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <conv:PrivacyGradeToBrushConverter x:Key="PrivacyGradeToBrush"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                BorderThickness="1,1,1,0" 
                                BorderBrush="#FFACACAC" 
                                CornerRadius="4,4,0,0" 
                                Margin="2,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="0"
                                                Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                ContentSource="Header"
                                                Margin="8,4,4,4"/>
                                
                                <!-- Privacy Grade Indicator -->
                                <Ellipse Grid.Column="1" 
                                        Width="8" Height="8" 
                                        Margin="4,0"
                                        Fill="{Binding PrivacyGrade, Converter={StaticResource PrivacyGradeToBrush}}"
                                        ToolTip="{Binding PrivacyGradeTooltip}"/>
                                
                                <!-- Close Button -->
                                <Button Grid.Column="2" 
                                       Name="CloseButton"
                                       Width="16" Height="16" 
                                       Margin="4,0,8,0"
                                       Content="Ã—"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Command="{Binding CloseTabCommand}"
                                       Visibility="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibility}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFF0F0F0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF0078D4"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                            <Trigger SourceName="CloseButton" Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseButton" Property="Background" Value="#FFFF4444"/>
                                <Setter TargetName="CloseButton" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatusChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#FF4CAF50"/>
        </Style>
        
        <Style x:Key="PanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFACACAC"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Tab Bar -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="*"/>    <!-- Content Area -->
            <RowDefinition Height="Auto"/> <!-- Panel Area -->
        </Grid.RowDefinitions>
        
        <!-- Tab Bar -->
        <DockPanel Grid.Row="0" Background="#FFF8F8F8" Height="32">
            <Button DockPanel.Dock="Right" 
                    Content="+" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Width="32" Height="24"
                    Margin="4,2"
                    Command="{Binding NewTabCommand}"
                    ToolTip="New Container (Ctrl+T)"/>
            
            <TabControl ItemsSource="{Binding Tabs}" 
                       SelectedItem="{Binding ActiveTab}"
                       ItemContainerStyle="{StaticResource TabItemStyle}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" 
                                  MaxWidth="200" 
                                  TextTrimming="CharacterEllipsis"
                                  ToolTip="{Binding Url}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <!-- WebView2 will be hosted here -->
                        <Border Background="White"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DockPanel>
        
        <!-- Status Bar -->
        <DockPanel Grid.Row="1" Background="#FFF0F0F0" Height="28" 
                   Visibility="{Binding HasStatusMessage, Converter={StaticResource BoolToVisibility}}">
            
            <!-- URL Sanitization Status -->
            <Border Style="{StaticResource StatusChipStyle}"
                    Background="#FF4CAF50"
                    Visibility="{Binding ActiveTab.WasSanitized, Converter={StaticResource BoolToVisibility}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ“ Sanitized" 
                              Foreground="White" 
                              FontSize="11"/>
                    <Button Content="Undo" 
                           FontSize="10"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="4,0,0,0"
                           Command="{Binding ActiveTab.UndoSanitizationCommand}"/>
                </StackPanel>
            </Border>
            
            <!-- Anti-Fingerprinting Status -->
            <Border Style="{StaticResource StatusChipStyle}"
                    Background="#FF2196F3"
                    Visibility="{Binding ActiveTab.Antifingerprinting, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="ðŸ›¡ï¸ Protected" 
                          Foreground="White" 
                          FontSize="11"/>
            </Border>
            
            <!-- Download Status -->
            <Border Style="{StaticResource StatusChipStyle}"
                    Background="#FFFF9800"
                    Visibility="{Binding HasActiveDownloads, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="{Binding ActiveDownloadsText}" 
                          Foreground="White" 
                          FontSize="11"/>
            </Border>
            
            <!-- Performance Indicator -->
            <TextBlock DockPanel.Dock="Right" 
                      Text="{Binding PerformanceInfo}" 
                      FontSize="10" 
                      Foreground="#FF666666" 
                      VerticalAlignment="Center" 
                      Margin="8,0"/>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                      FontSize="11" 
                      VerticalAlignment="Center" 
                      Margin="8,0" 
                      TextTrimming="CharacterEllipsis"/>
        </DockPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- WebView2 content will be hosted here -->
            <ContentPresenter Content="{Binding ActiveTab.WebViewContent}"/>
            
            <!-- Loading Overlay -->
            <Grid Background="#80FFFFFF" 
                  Visibility="{Binding ActiveTab.IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="Loading..." 
                              HorizontalAlignment="Center" 
                              Margin="0,8,0,0"
                              FontSize="12"
                              Foreground="#FF666666"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Expandable Panel Area -->
        <Expander Grid.Row="3" 
                 Header="Privacy &amp; Diagnostics" 
                 IsExpanded="{Binding IsPanelExpanded}"
                 Background="#FFF8F8F8">
            <TabControl Height="200">
                
                <!-- Privacy Panel -->
                <TabItem Header="Privacy">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Site Privacy Policy" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <RadioButton Content="Strict (Maximum Protection)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static conv:EnumToBoolConverter.Instance}, ConverterParameter=Strict}"
                                        Margin="0,2"/>
                            <TextBlock Text="â€¢ Blocks all tracking" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="â€¢ Maximum fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                            
                            <RadioButton Content="Balanced (Recommended)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static conv:EnumToBoolConverter.Instance}, ConverterParameter=Balanced}"
                                        Margin="0,2"/>
                            <TextBlock Text="â€¢ Blocks known trackers" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="â€¢ Balanced fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                            
                            <RadioButton Content="Trusted (Minimal Protection)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static conv:EnumToBoolConverter.Instance}, ConverterParameter=Trusted}"
                                        Margin="0,2"/>
                            <TextBlock Text="â€¢ Allows most content" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="â€¢ Minimal fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Anti-Fingerprinting" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <CheckBox Content="Canvas Protection" 
                                     IsChecked="{Binding ActiveTab.CanvasProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Audio Protection" 
                                     IsChecked="{Binding ActiveTab.AudioProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="WebGL Protection" 
                                     IsChecked="{Binding ActiveTab.WebGLProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Timing Protection" 
                                     IsChecked="{Binding ActiveTab.TimingProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Battery API Blocking" 
                                     IsChecked="{Binding ActiveTab.BatteryBlocking}"
                                     Margin="0,2"/>
                            
                            <Button Content="Reset to Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ActiveTab.ResetPrivacyCommand}"
                                   Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Rules Panel -->
                <TabItem Header="URL Rules">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="URL Sanitization Rules" FontWeight="Bold" Margin="0,0,0,8"/>
                        
                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding SanitizationRules}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="True"
                                 CanUserDeleteRows="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}" Width="150"/>
                                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="100"/>
                                <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="200"/>
                                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Load Rules Pack" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding LoadRulesCommand}"/>
                            <Button Content="Export Rules" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ExportRulesCommand}"/>
                            <Button Content="Reset to Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ResetRulesCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Diagnostics Panel -->
                <TabItem Header="Diagnostics">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Navigation Events" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <ListBox ItemsSource="{Binding NavigationEvents}" 
                                    Height="120"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                                      FontSize="10" 
                                                      Foreground="#FF666666"/>
                                            <TextBlock Text="{Binding Event}" 
                                                      FontSize="11"/>
                                            <TextBlock Text="{Binding Details}" 
                                                      FontSize="10" 
                                                      Foreground="#FF666666"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Performance Metrics" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Load Time:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActiveTab.LoadTime}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActiveTab.MemoryUsage}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Sanitizer Overhead:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActiveTab.SanitizerOverhead}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Shims Active:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActiveTab.ActiveShims}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="MOTW Status:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ActiveTab.MOTWStatus}" Margin="0,2"/>
                            </Grid>
                            
                            <Button Content="Export Diagnostics" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ExportDiagnosticsCommand}"
                                   Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </Expander>
    </Grid>
</UserControl>