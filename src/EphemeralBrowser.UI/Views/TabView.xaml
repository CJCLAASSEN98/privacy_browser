<UserControl x:Class="EphemeralBrowser.UI.Views.TabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <Style x:Key="StatusChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#FF4CAF50"/>
        </Style>
        
        <Style x:Key="PanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFACACAC"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Privacy Panel -->
        </Grid.RowDefinitions>
        
        <!-- Status Bar -->
        <DockPanel Grid.Row="0" Background="#FFF0F0F0" Height="28">
            
            <!-- URL Sanitization Status -->
            <Border Style="{StaticResource StatusChipStyle}"
                    Background="#FF4CAF50"
                    Visibility="{Binding WasSanitized, Converter={StaticResource BoolToVisibility}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓ Sanitized" 
                              Foreground="White" 
                              FontSize="11"/>
                    <Button Content="Undo" 
                           FontSize="10"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="4,0,0,0"
                           Command="{Binding UndoSanitizationCommand}"/>
                </StackPanel>
            </Border>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                      FontSize="11" 
                      VerticalAlignment="Center" 
                      Margin="8,0" 
                      TextTrimming="CharacterEllipsis"/>
        </DockPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- WebView2 Container -->
            <wv2:WebView2 x:Name="WebView" 
                         Visibility="{Binding IsLoaded, Converter={StaticResource BoolToVisibility}}"
                         NavigationStarting="WebView_NavigationStarting"
                         NavigationCompleted="WebView_NavigationCompleted"
                         CoreWebView2InitializationCompleted="WebView_CoreWebView2InitializationCompleted"/>
            
            <!-- Loading Indicator -->
            <Grid Background="White" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="300" Height="6" Margin="0,0,0,16"/>
                    <TextBlock Text="Initializing secure container..." 
                              HorizontalAlignment="Center" 
                              FontSize="16"
                              Foreground="#FF666666"/>
                    <TextBlock Text="{Binding LoadingUrl}" 
                              HorizontalAlignment="Center" 
                              FontSize="12"
                              Foreground="#FF999999"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- Security Warning Overlay -->
            <Border Background="#FFF44336" 
                    Visibility="{Binding HasSecurityWarning, Converter={StaticResource BoolToVisibility}}"
                    VerticalAlignment="Top"
                    Padding="12,6">
                <TextBlock Text="{Binding SecurityStatus}" 
                          Foreground="White" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Expandable Privacy Panel -->
        <Expander Grid.Row="2" 
                 IsExpanded="{Binding IsPrivacyPanelExpanded}"
                 Background="#FFF8F8F8">
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Privacy &amp; Security Settings" 
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"/>
                    
                    <!-- Anti-Fingerprinting Status Moved Here -->
                    <Border Style="{StaticResource StatusChipStyle}"
                            Background="#FF2196F3"
                            Visibility="{Binding IsAntiFingerprinting, Converter={StaticResource BoolToVisibility}}"
                            Margin="12,0,0,0">
                        <TextBlock Text="🛡️ Protected" 
                                  Foreground="White" 
                                  FontSize="11"/>
                    </Border>
                </StackPanel>
            </Expander.Header>
            <TabControl Height="250">
                
                <!-- Privacy Panel -->
                <TabItem Header="Privacy">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Site Privacy Policy" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <RadioButton Content="Strict (Maximum Protection)" 
                                        GroupName="PrivacyLevel"
                                        IsChecked="{Binding IsPrivacyLevelStrict}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Blocks all tracking parameters" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Maximum fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                            
                            <RadioButton Content="Balanced (Recommended)" 
                                        GroupName="PrivacyLevel"
                                        IsChecked="{Binding IsPrivacyLevelBalanced}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Blocks known trackers" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Balanced fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                            
                            <RadioButton Content="Minimal (Minimal Protection)" 
                                        GroupName="PrivacyLevel"
                                        IsChecked="{Binding IsPrivacyLevelTrusted}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Allows most content" FontSize="10" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Minimal fingerprint protection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,8"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Anti-Fingerprinting" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <CheckBox Content="Canvas Protection" 
                                     IsChecked="{Binding CanvasProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Audio Protection" 
                                     IsChecked="{Binding AudioProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="WebGL Protection" 
                                     IsChecked="{Binding WebGLProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Timing Protection" 
                                     IsChecked="{Binding TimingProtection}"
                                     Margin="0,2"/>
                            <CheckBox Content="Battery API Blocking" 
                                     IsChecked="{Binding BatteryBlocking}"
                                     Margin="0,2"/>
                            
                            <Button Content="Reset to Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ResetPrivacyCommand}"
                                   Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- URL Rules Panel -->
                <TabItem Header="URL Rules">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="URL Sanitization Rules" FontWeight="Bold" Margin="0,0,0,8"/>
                        
                        <ListBox Grid.Row="1" 
                                ItemsSource="{Binding SanitizationRules}"
                                Height="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Parameter}" Margin="4,2"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Action}" Margin="4,2"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Domain}" Margin="4,2"/>
                                        <CheckBox Grid.Column="3" IsChecked="{Binding IsEnabled}" Margin="4,2"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Load Rules Pack" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding LoadRulesCommand}"/>
                            <Button Content="Export Rules" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ExportRulesCommand}"/>
                            <Button Content="Reset to Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ResetRulesCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Diagnostics Panel -->
                <TabItem Header="Diagnostics">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Navigation Events" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <ListBox ItemsSource="{Binding NavigationEvents}" 
                                    Height="120"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                                      FontSize="10" 
                                                      Foreground="#FF666666"/>
                                            <TextBlock Text="{Binding Event}" 
                                                      FontSize="11"/>
                                            <TextBlock Text="{Binding Details}" 
                                                      FontSize="10" 
                                                      Foreground="#FF666666"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Performance Metrics" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Load Time:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LoadTime}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MemoryUsage}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Sanitizer Overhead:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SanitizerOverhead}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Shims Active:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActiveShims}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="MOTW Status:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MOTWStatus}" Margin="0,2"/>
                            </Grid>
                            
                            <Button Content="Export Diagnostics" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ExportDiagnosticsCommand}"
                                   Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </Expander>
    </Grid>
</UserControl>
