<UserControl x:Class="EphemeralBrowser.UI.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <Style x:Key="StatusChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#FF4CAF50"/>
        </Style>
        
        <Style x:Key="PanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFACACAC"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PrivacyToggleStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Privacy & Diagnostics Panel -->
        </Grid.RowDefinitions>
        
        <!-- Main Content Area (WebView2 containers will be hosted here) -->
        <Grid Grid.Row="0" Background="White">
            <ContentPresenter Content="{Binding ActiveTabContent}"/>
        </Grid>
        
        <!-- Expandable Privacy & Diagnostics Panel -->
        <Expander Grid.Row="1" 
                 Header="Privacy &amp; Diagnostics" 
                 IsExpanded="{Binding IsPanelExpanded}"
                 Background="#FFF8F8F8"
                 BorderBrush="#FFACACAC"
                 BorderThickness="0,1,0,0">
            <TabControl Height="200" Background="White">
                
                <!-- Privacy Panel -->
                <TabItem Header="Privacy Controls">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Container Privacy Policy" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <RadioButton Content="Strict (Maximum Protection)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static local:EnumToBoolConverter.Instance}, ConverterParameter=Strict}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Blocks all tracking parameters" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Maximum fingerprint protection" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Strict content security policy" FontSize="11" Foreground="#FF666666" Margin="16,0,0,12"/>
                            
                            <RadioButton Content="Balanced (Recommended)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static local:EnumToBoolConverter.Instance}, ConverterParameter=Balanced}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Blocks known trackers" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Balanced fingerprint protection" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Allows most content to function" FontSize="11" Foreground="#FF666666" Margin="16,0,0,12"/>
                            
                            <RadioButton Content="Minimal (Trusted Sites)" 
                                        IsChecked="{Binding ActiveTab.PrivacyLevel, Converter={x:Static local:EnumToBoolConverter.Instance}, ConverterParameter=Minimal}"
                                        Margin="0,2"/>
                            <TextBlock Text="• Minimal tracking protection" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Reduced fingerprint protection" FontSize="11" Foreground="#FF666666" Margin="16,0,0,4"/>
                            <TextBlock Text="• Maximum compatibility" FontSize="11" Foreground="#FF666666" Margin="16,0,0,12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Anti-Fingerprinting Shims" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <CheckBox Content="Canvas Protection" 
                                     IsChecked="{Binding ActiveTab.CanvasProtection}"
                                     Style="{StaticResource PrivacyToggleStyle}"/>
                            <TextBlock Text="Adds noise to canvas rendering" FontSize="10" Foreground="#FF666666" Margin="16,0,0,6"/>
                            
                            <CheckBox Content="Audio Fingerprinting Protection" 
                                     IsChecked="{Binding ActiveTab.AudioProtection}"
                                     Style="{StaticResource PrivacyToggleStyle}"/>
                            <TextBlock Text="Adds noise to audio context" FontSize="10" Foreground="#FF666666" Margin="16,0,0,6"/>
                            
                            <CheckBox Content="WebGL Protection" 
                                     IsChecked="{Binding ActiveTab.WebGLProtection}"
                                     Style="{StaticResource PrivacyToggleStyle}"/>
                            <TextBlock Text="Spoofs WebGL renderer information" FontSize="10" Foreground="#FF666666" Margin="16,0,0,6"/>
                            
                            <CheckBox Content="High-Resolution Timing Protection" 
                                     IsChecked="{Binding ActiveTab.TimingProtection}"
                                     Style="{StaticResource PrivacyToggleStyle}"/>
                            <TextBlock Text="Quantizes performance.now() results" FontSize="10" Foreground="#FF666666" Margin="16,0,0,6"/>
                            
                            <CheckBox Content="Battery API Blocking" 
                                     IsChecked="{Binding ActiveTab.BatteryBlocking}"
                                     Style="{StaticResource PrivacyToggleStyle}"/>
                            <TextBlock Text="Prevents battery level detection" FontSize="10" Foreground="#FF666666" Margin="16,0,0,12"/>
                            
                            <Button Content="Reset to Profile Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ActiveTab.ResetPrivacyCommand}"
                                   Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- URL Sanitization Rules Panel -->
                <TabItem Header="URL Sanitization">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Tracking Parameter Rules" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Border Background="#FF2196F3" CornerRadius="4" Padding="4,2" Margin="12,0,0,0">
                                <TextBlock Text="{Binding SanitizationStats}" Foreground="White" FontSize="10"/>
                            </Border>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding SanitizationRules}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="True"
                                 CanUserDeleteRows="True"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}" Width="120"/>
                                <DataGridComboBoxColumn Header="Action" Width="80">
                                    <DataGridComboBoxColumn.ItemsSource>
                                        <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                            <sys:String>Remove</sys:String>
                                            <sys:String>Allow</sys:String>
                                        </x:Array>
                                    </DataGridComboBoxColumn.ItemsSource>
                                </DataGridComboBoxColumn>
                                <DataGridTextColumn Header="Domain Pattern" Binding="{Binding Domain}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="60"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Load Rules Pack" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding LoadRulesCommand}"/>
                            <Button Content="Export Rules" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ExportRulesCommand}"/>
                            <Button Content="Reset to Defaults" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ResetRulesCommand}"/>
                            <Button Content="Test URL" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding TestUrlCommand}"
                                   Margin="12,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Downloads & Security Panel -->
                <TabItem Header="Downloads">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Quarantined Downloads" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <ListBox ItemsSource="{Binding QuarantinedDownloads}" 
                                    Height="120"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4">
                                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="12"/>
                                            <TextBlock Text="{Binding SourceUrl}" FontSize="10" Foreground="#FF666666" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding Size, StringFormat='Size: {0:N0} bytes'}" FontSize="10" Foreground="#FF666666"/>
                                                <TextBlock Text=" | " FontSize="10" Foreground="#FF666666"/>
                                                <TextBlock Text="{Binding ContentType}" FontSize="10" Foreground="#FF666666"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Sha256Hash, StringFormat='SHA-256: {0}'}" FontSize="9" Foreground="#FF999999" FontFamily="Consolas"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Button Content="Promote" FontSize="10" Padding="4,2" Margin="0,0,4,0" 
                                                       Command="{Binding DataContext.PromoteDownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       CommandParameter="{Binding}"/>
                                                <Button Content="Delete" FontSize="10" Padding="4,2" 
                                                       Command="{Binding DataContext.DeleteDownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Download Security Status" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinion Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Downloads:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DownloadMetrics.TotalDownloads}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Quarantined:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DownloadMetrics.QuarantinedDownloads}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Promoted:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DownloadMetrics.PromotedDownloads}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Size:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DownloadMetrics.TotalBytesDownloaded, StringFormat='{0:N0} bytes'}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="MOTW Status:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MOTWStatus}" Margin="0,2" Foreground="Green"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Quarantine Dir:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding QuarantineDirectory}" Margin="0,2" FontSize="10" TextTrimming="CharacterEllipsis"/>
                            </Grid>
                            
                            <Button Content="Clear Quarantine" 
                                   Style="{StaticResource PanelButtonStyle}"
                                   Command="{Binding ClearQuarantineCommand}"
                                   Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <!-- Diagnostics & Performance Panel -->
                <TabItem Header="Diagnostics">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Container Events" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <ListBox ItemsSource="{Binding NavigationEvents}" 
                                    Height="120"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                                          FontSize="10" 
                                                          Foreground="#FF666666"
                                                          FontFamily="Consolas"
                                                          Width="80"/>
                                                <TextBlock Text="{Binding Event}" 
                                                          FontSize="11"
                                                          FontWeight="SemiBold"
                                                          Margin="8,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Details}" 
                                                      FontSize="10" 
                                                      Foreground="#FF666666"
                                                      TextWrapping="Wrap"
                                                      Margin="88,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Performance Metrics" FontWeight="Bold" Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Load Time:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActiveTab.LoadTime}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory Usage:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActiveTab.MemoryUsage}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Sanitizer Overhead:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActiveTab.SanitizerOverhead}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Active Shims:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActiveTab.ActiveShims}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Profile ID:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ActiveTab.ProfileId}" Margin="0,2" FontFamily="Consolas" FontSize="10"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Container Count:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Tabs.Count}" Margin="0,2"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Security Status:" Margin="0,2,8,2"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding ActiveTab.SecurityStatus}" Margin="0,2" Foreground="Green"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                <Button Content="Export Diagnostics" 
                                       Style="{StaticResource PanelButtonStyle}"
                                       Command="{Binding ExportDiagnosticsCommand}"/>
                                <Button Content="Force GC" 
                                       Style="{StaticResource PanelButtonStyle}"
                                       Command="{Binding ForceGCCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </Expander>
    </Grid>
</UserControl>